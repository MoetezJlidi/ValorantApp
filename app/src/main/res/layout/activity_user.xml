<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BD5555"
    android:foregroundGravity="center"
    tools:context=".User">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="114dp"
            android:layout_height="128dp"
            android:layout_gravity="left"
            android:layout_marginTop="92dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_id"
            android:layout_width="231dp"
            android:layout_height="57dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toEndOf="@+id/card_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rank_name"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="512dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.291"
            app:layout_constraintStart_toEndOf="@+id/rank_img"
            app:layout_constraintTop_toTopOf="@+id/name_id" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Disconnect"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ScrollView
            android:layout_width="368dp"
            android:layout_height="289dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="156dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    android:layout_width="331dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center"
                    android:text="Match History"
                    android:visibility="visible"
                    app:backgroundTint="#1D3043"
                    app:cornerRadius="200dp"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="334dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:text="Agents"
                    android:visibility="visible"
                    app:backgroundTint="#1D3043"
                    app:cornerRadius="200dp"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="338dp"
                    android:layout_height="94dp"
                    android:layout_gravity="center"
                    android:text="Store"
                    android:visibility="visible"
                    app:backgroundTint="#1D3043"
                    app:cornerRadius="200dp"
                    tools:visibility="visible" />

            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/rank_img"
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/card_img"
            app:layout_constraintTop_toBottomOf="@+id/name_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="346dp"
        android:layout_height="77dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/_200px_valorant_logo_svg" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>